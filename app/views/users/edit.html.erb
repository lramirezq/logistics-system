<div class="container">
  <div class="card" style="max-width: 500px; margin: 2rem auto;">
    <h2>Editar Usuario - <%= @user.email %></h2>

    <%= form_with model: @user do |f| %>
      <% if @user.errors.any? %>
        <div style="color: red; margin-bottom: 1rem;">
          <% @user.errors.full_messages.each do |message| %>
            <p><%= message %></p>
          <% end %>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :email, "Email", class: "form-label" %>
        <%= f.email_field :email, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :role, "Rol", class: "form-label" %>
        <%= f.select :role, 
            options_for_select([['Administrador', 'admin'], ['Manager', 'manager'], ['Usuario', 'user']], @user.role),
            {}, 
            { class: "form-input" } %>
      </div>

      <div class="form-group">
        <%= f.label :password, "Nueva Contraseña", class: "form-label" %>
        <%= f.password_field :password, class: "form-input" %>
        <small>Dejar vacío para mantener contraseña actual</small>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirmar Nueva Contraseña", class: "form-label" %>
        <%= f.password_field :password_confirmation, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.submit "Actualizar", class: "btn btn-primary" %>
        <%= link_to "Cancelar", users_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>