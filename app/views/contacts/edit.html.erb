<div class="container">
  <div class="card" style="max-width: 500px; margin: 2rem auto;">
    <h2>Editar Contacto - <%= @contact.name %></h2>

    <%= form_with model: [@company, @contact] do |f| %>
      <% if @contact.errors.any? %>
        <div style="color: red; margin-bottom: 1rem;">
          <% @contact.errors.full_messages.each do |message| %>
            <p><%= message %></p>
          <% end %>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :name, "Nombre", class: "form-label" %>
        <%= f.text_field :name, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :position, "Cargo", class: "form-label" %>
        <%= f.text_field :position, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :email, "Email", class: "form-label" %>
        <%= f.email_field :email, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :phone, "Teléfono", class: "form-label" %>
        <%= f.text_field :phone, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.submit "Actualizar", class: "btn btn-primary" %>
        <%= link_to "Cancelar", @company, class: "btn btn-secondary" %>
        <%= button_to "Desactivar", [@company, @contact], method: :delete, 
            confirm: "¿Estás seguro?", class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>