<div class="container">
  <div class="card" style="max-width: 600px; margin: 2rem auto;">
    <h2><%= @parent_id ? (params[:relationship_type] == 'provider' ? "Nuevo Proveedor" : "Nuevo Subcliente") : "Nueva Empresa" %></h2>

    <%= form_with model: @company do |f| %>
      <% if @company.errors.any? %>
        <div style="color: red; margin-bottom: 1rem;">
          <% @company.errors.full_messages.each do |message| %>
            <p><%= message %></p>
          <% end %>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :codigo, "Código", class: "form-label" %>
        <%= f.text_field :codigo, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :razon_social, "Razón Social", class: "form-label" %>
        <%= f.text_field :razon_social, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :nombre_comercial, "Nombre Comercial", class: "form-label" %>
        <%= f.text_field :nombre_comercial, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :name, "Nombre", class: "form-label" %>
        <%= f.text_field :name, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :tipo_empresa, "Tipo de Empresa", class: "form-label" %>
        <%= f.select :tipo_empresa, 
            options_for_select(Company::TIPOS_EMPRESA.map { |tipo| [tipo, tipo] }),
            { prompt: 'Seleccionar tipo de empresa' }, 
            { class: "form-input" } %>
      </div>

      <div class="form-group">
        <%= f.label :company_type, "Tipo", class: "form-label" %>
        <% if @parent_id %>
          <% default_type = params[:relationship_type] == 'provider' ? 'provider' : 'client' %>
          <%= f.select :company_type, 
              options_for_select([['Cliente', 'client'], ['Proveedor', 'provider']], default_type),
              {}, 
              { class: "form-input", readonly: true } %>
          <%= f.hidden_field :company_type, value: default_type %>
        <% else %>
          <%= f.select :company_type, 
              options_for_select([['Cliente', 'client'], ['Proveedor', 'provider']]),
              { prompt: 'Seleccionar tipo' }, 
              { class: "form-input" } %>
        <% end %>
      </div>

      <% if @parent_id %>
        <%= hidden_field_tag :parent_id, @parent_id %>
        <%= hidden_field_tag :relationship_type, params[:relationship_type] %>
      <% end %>

      <div class="form-group">
        <%= f.label :tax_id, "RUT", class: "form-label" %>
        <%= f.text_field :tax_id, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :email, "Email", class: "form-label" %>
        <%= f.email_field :email, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :phone, "Teléfono", class: "form-label" %>
        <%= f.text_field :phone, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :address, "Dirección", class: "form-label" %>
        <%= f.text_area :address, rows: 3, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :country, "País", class: "form-label" %>
        <%= f.select :country, 
            options_for_select(countries_for_select, 'Chile'),
            { prompt: 'Seleccionar país' }, 
            { class: "form-input", id: "company_country" } %>
      </div>

      <div id="chile-fields">
        <div class="form-group">
          <%= f.label :region, "Región", class: "form-label" %>
          <%= f.select :region, 
              options_for_select(regions_for_select),
              { prompt: 'Seleccionar región' }, 
              { class: "form-input", id: "company_region" } %>
        </div>

        <div class="form-group">
          <%= f.label :province, "Provincia", class: "form-label" %>
          <%= f.select :province, [],
              { prompt: 'Seleccionar provincia' }, 
              { class: "form-input", id: "company_province" } %>
        </div>

        <div class="form-group">
          <%= f.label :commune, "Comuna", class: "form-label" %>
          <%= f.select :commune, [],
              { prompt: 'Seleccionar comuna' }, 
              { class: "form-input", id: "company_commune" } %>
        </div>
      </div>

      <div class="form-group">
        <%= f.submit "Crear Empresa", class: "btn btn-primary" %>
        <%= link_to "Cancelar", companies_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>

<script>
  window.chileLocationData = <%= chile_regions_data_for_js.to_json.html_safe %>;
</script>